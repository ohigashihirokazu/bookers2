<%= render "layouts/errors", book: @book_new %>
<div class="row">
  <%= render "layouts/sidebar", {book: @book_new, user: @user } %>

<div class="col-xs-9">
    <h2>Books</h2>

    <table class="table table-hover table-inverse">
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
        <% @user.books.each do |book| %>
          <tr>
            <th scope="row">
              <%= link_to attachment_image_tag(@user, :profile_image, size: "40x40", fallback: "no_image.jpg"), user_path(current_user) %></th>

            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
</table>
</div>