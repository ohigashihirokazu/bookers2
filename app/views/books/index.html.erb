<%= render "layouts/errors", book: @book %>
<div class="row">
  <%= render "layouts/sidebar", {book: @book, user: current_user} %>
  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col"></th>
          <th scope="col">Title</th>
          <th scope="col">Body</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>

          <th scope="row">
            <%= link_to attachment_image_tag(book.user, :profile_image, size: "40x40", fallback: "no_image.jpg"), user_path(book.user) %>
          </th>

          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
