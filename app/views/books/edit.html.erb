<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Editing Book </h1>
		<%= render "layouts/errors", book: @book %>


		<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
		<h4>Title</h4>
		<%= f.text_field :title %>


		<h4>Opinion</h4>
		<%= f.text_area :body %>
		
		<%= f.submit 'Update Book' %>
		<% end %>
	</div>

	<td><%= link_to "Show", book_path(@book) %></td>
	<td><%= link_to "Back", books_path %></td>
